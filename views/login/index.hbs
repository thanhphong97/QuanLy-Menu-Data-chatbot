<div class="login-box" style="width: 40%; padding: 10px;">
    <h2>{{msg}}</h2>
    <form action="/" method="post" class="form-actions">
        <div class="control-group">
            <label class="control-label" for="username"><h2><b>Tài khoản</b></h2></label>
            <input type="text" id="username" name="username">
        </div>
        <div>
            <label for="password"><h2><b>Mật khẩu</b></h2></label>
            <input type="password" id="password" name="password">
        </div>
        <div style="padding-bottom: 25px; margin-left: 27px; margin-top: 7px;">
            <button class="btn btn-primary" type="submit">Đăng nhập</button>
        </div>
    </form>
</div>