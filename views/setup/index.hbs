<table style="width: 100%">
    <caption style="color: #003399"><h1><b>Các Menu Item của Submenu {{submenu}}</b></h1></caption>
{{#each data}}
    <tr>
        <th style="text-align: center; font-weight: bold; color: #9F00A7; font-size: 20px; width: 205px"  >Tên Submenu[{{@index}}] <input type="text" value="{{this.[0].title}}"></th>
        {{#if this.[0].url}}
            <td colspan="3"><input type="text" value="{{this.[0].url }}"></td>
        {{else}}
            <td colspan="3"><center><h2><b style="color: #9F00A7; font-size: 20px;">Menu Item</b></h2></center></td>
        {{/if}}
    </tr>
    {{#if this.[0].call_to_actions}}
        <tr>
            <td></td>
            <td><h2><b>Tên MenuItem</b></h2></td>
            <td><h2><b>URL/Sự kiện</b></h2></td>
            <td><h2><b>Loại (web_url/postback)</b></h2></td>
        </tr>
    {{/if}}
    {{#each this.[0].call_to_actions}}
        <tr>
        <td></td>
        <td ><input type="text" value="{{title}}"></td>
        {{#if url}}
            <td ><input type="text" value="{{url}}"></td>
        {{else}}
            <td><input type="text" value="{{payload}}"></td>
        {{/if}}
        <td>
            <input type="text" value="{{type}}">
        </td>
    </tr>
    {{/each}}
{{/each}}
</table>
<br>
<table style="width: 100%" >
    <caption><h1><b>Button URL</b></h1></caption>
    <tr>
        <th><b>Tiêu đề</b></th>
        <th><b>Link</b></th>
    </tr>
    <tr>
        <td><input type="text" value="{{buttonurl.title}}"></td>
        <td><input type="text" value="{{buttonurl.url}}"></td>
    </tr>
</table>
{{#each loai}}
    {{this}}
{{/each}}